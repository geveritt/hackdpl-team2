<div class="row" id="search_row">
	<div class="medium-2 columns"><%= image_tag 'dpl_logo.png' %></div>
	<div class="medium-4 columns">&nbsp;</div>
	<div class="medium-4 columns">
		<input type="text" id="search_input" />
	</div>
	<div class="medium-2 columns" id="social_icons">
		<a href="https://twitter.com/detroitlibrary"><%= image_tag 'webicons/webicon-facebook-m.png' %></a>
		<a href="https://www.facebook.com/detroitpubliclibrary"><%= image_tag 'webicons/webicon-twitter-m.png' %></a>
		<a href="https://www.youtube.com/user/detroitpubliclibrary"><%= image_tag 'webicons/webicon-youtube-m.png' %></a>
	</div>
</div>

<div class="row" id="header_row">
	<div class="medium-12 columns">
		<%= render :partial=>'header_slider' %>
	</div>
</div>

<div id="main_content">
	<div class="row" id="announcement_row">
		<div data-alert class="alert-box info radius medium-8 medium-centered columns">
			Douglass and Redford branches are temporary closed for renovations.
			<a href="#" class="close">&times;</a>
		</div>
	</div>

	<div class="row" id="content_row">
		<div class="medium-8 columns">
			<%= render :partial => 'upcoming_events' %>
			<%= render :partial => 'news' %>
		</div>

		<div class="medium-4 columns">
			<div class="left_title">&nbsp;</div>
			<div class="right_title">&nbsp;</div>
			<div class="section_title" id="books_title">Books Title</div>
			<div class="home_section" id="home_books">
				<div class="popular_book"></div>
				<div class="popular_book"></div>
				<div class="popular_book"></div>
				<div style="clear:both;"></div>
			</div>

			<div class="left_title">&nbsp;</div>
			<div class="right_title">&nbsp;</div>
			<div class="section_title" id="services_title">Services Title</div>
			<div class="home_section" id="home_services">
				<ul>
					<li>
						<a href="/services/3">
							<div class="service_title">Hype Teen Center</div>
							<div class="service_body">
								Welcome to HYPE, the Detroit Public Library's Teen Center.
							</div>
						</a>
					</li>
					<li>
						<a href="/services/4">
							<div class="service_title">Ask A Librarian</div>
							<div class="service_body">
								Brief, factual answers to your reference questions via e-mail, chat or by phone.
							</div>
						</a>
					</li>
					<li>
						<a href="/services/5">
							<div class="service_title">Detroit Reads!</div>
							<div class="service_body">
								Learn to read or improve your reading skills.
							</div>
						</a>
					</li>
					<li>
						<a href="/services/6">
							<div class="service_title">Career and Employment Assistance</div>
							<div class="service_body">
								Resources for making career decisions, strategizing your job search, and finding job listings at the Main Library.
							</div>
						</a>
					</li>
				</ul>
			</div>
			<%= render :partial=>'books_games' %>
			<%= render :partial=>'services' %>
		</div>
	</div>
</div>